   "source": [
    "import pandas as pd\n",
    "idx = ['Duck', 'Walrus', 'Beaver', 'Salamander']\n",
    "\n",
    "def thing_vector(thing, idx):\n",
    "    return [1 if thing == t else 0 for t in idx]\n",
    "\n",
    "df = pd.DataFrame({\n",
    "    thing : pd.Series(data=thing_vector(thing, idx), index=idx) for thing in idx\n",
    "})\n",
    "df"
   ]
